<div class="content">
  <div class="container-fluid">
    <div class="row">
      <div class="col-md-12">
        <div class="card">
          <div class="header">
            <h6 class="title"><%=siren.deviceProps.name%></h6>
          </div>
          <hr />
          <div class="content">
            <div>
              <div style="margin-right: 50px; width:200px;  display: inline-block">
                <p id="avgcurr" style="font-size: 250%; font-weight: bold"> </p>
                <p class="category">:<%=siren.deviceMonitor.current%></p>
              </div> 
              <div id="lineChart" class="epoch category10"  style="width: 700px; height: 200px; display: inline-block"></div>
            </div>
            <br />
            <div>
              <div style="display: inline-block; margin-right: 50px; width:200px">
                <p id="devstate" style="font-size: 250%; font-weight: bold"></p>                                                                         
                <p class="category">:<%=siren.deviceMonitor.state%></p>
              </div>
              <div class="progress" style="display: inline-block; background: rgba(255, 0, 0, 1); border: 0px solid rgba(245, 245, 245, 1); border-radius: 4px; width:700px; height: 50px;">
                <div class="progress-bar" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width: 0%; background: rgba(35, 219, 60, 1);">
                  <span class="sr-only">0% Complete</span>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-md-5 col-md-offset-7">
        <div class="card">
          <div class="header">
            <h6 class="title">SERVER API URL</h6>
          </div>
            <div style="font-size: 95%" class="content"> <%=siren.deviceHref%> </div>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-md-5">
        <div class="card">
          <div class="header">
           <h5 class="title"> ACTIONS </h5>
          </div>
          <div class="content">
            <% if (siren.deviceActions === null) { %>
               <%= "no action available for this device." %>
            <% } %>
          </div>
        </div>
      </div>
      <div class="col-md-7">
        <div class="card">
          <div class="header">
            <h5 class="title"> EVENTS </h5>                                                                                     
          </div>
          <div class="content">
            <p>State transistions for:&nbsp;<%=siren.deviceProps.name%></p>
          </div>                                                                                                                   
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-md-5">
        <div class="card">
          <div class="header">
           <h5 class="title"> PROPERTIES </h5>                                                                              
          </div>
          <div class="content" style="font-size: 80%">
            <table class="table table-striped">
              <thead>
                <th>Property</th>
                <th>Value</th>
              </thead>
              <tbody>
                <tr><td>id:</td><td><%=siren.deviceProps.id%></td></tr>
                <tr><td>name:</td><td><%=siren.deviceProps.name%></td></tr>
                <tr><td>type:</td><td><%=siren.deviceProps.type%></td></tr>
                <tr><td>vendor:</td><td><%=siren.deviceProps.vendor%></td></tr>
                <tr><td>avgCurrent:</td><td><%=siren.deviceProps.avgCurrent%></td></tr>
                <tr><td>state:</td><td><%=siren.deviceProps.state%></td></tr>
              </tbody>
            </table>
          </div>                                                                                                                   
        </div>
      </div>
      <div class="col-md-7">
  
        <div class="row">
          <div class="col-md-12">
          <div class="card">
            <div class="header">
              <h5 class="title"> API REQUEST </h5>                                                                               
            </div>
            <div class="content">
              <table class="table table-striped">
              <tbody>
                <tr><td><%=siren.query.method%>&nbsp;<%=siren.query.url%></td></tr>                                                            
                <tr><td>Host: &nbsp; <%=siren.host%></td></tr>
                <tr><td>Accept:&nbsp; application/vnd.siren+json</td></tr>
              </tbody>
            </table>     
            </div>
          </div>
          </div>
          <div class="col-md-12">     
          <div style="overflow-x: hidden;" class="card">
            <div class="header">
              <h5 class="title"> API RESPONSE </h5>                                                                  
            </div>
            <div class="content">
              <pre>
                <%= siren.response %>
              </pre>
            </div>
          </div>
          </div>
        </div>
      </div>

    </div>    

  </div>
</div>

