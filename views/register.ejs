<!doctype html>
<html lang="en">
<head>
  <% include ./partials/header %>
</head>

<body>
    <nav class="navbar navbar-transparent navbar-absolute">	
	    <div class="container">
	        <div class="navbar-header">
	            <button type="button" class="navbar-toggle navbar-toggle-black" data-toggle="collapse" data-target="#navigation-example-2">
	                <span class="sr-only"><%=navBarTitle%></span>
	                <span class="icon-bar "></span>
	                <span class="icon-bar "></span>
	                <span class="icon-bar"></span>
	            </button>
	        </div>
	        <div class="collapse navbar-collapse">
	            <ul class="nav navbar-nav navbar-right">
	                <li>
	                   <a href="/login" class="btn">
	      			<%=loginButton%>
	                    </a>
	                </li>
	            </ul>
	        </div>
	    </div>
	</nav>

	<div class="wrapper wrapper-full-page">
    	<div class="register-page">
		<!--   you can change the color of the filter page using: data-color="blue | azure | green | orange | red | purple" -->
        	<div class="content">
            	<div class="container">
                	<div class="row">
                    	<div class="col-md-8 col-md-offset-2">
                        	<div class="header-text">
                            	<h2><%=pageHeader.title%></h2>
                            	<h4><%=pageHeader.subtitle%></h4>
                            	<hr>
                        	</div>
                    	</div>
                    	<div class="col-md-4 col-md-offset-2">
                        	<div class="media">
                            	<div class="media-left">
                                	<div class="icon icon-danger">
                                    	<i class="ti ti-user"></i>
                                	</div>
                            	</div>
                            	<div class="media-body">
                                	<h5><%=pageBody.title_1%></h5>
                                	<%=pageBody.description_1%>                            	
				</div>
                        	</div>
                        	<div class="media">
                            	<div class="media-left">
                                	<div class="icon icon-warning">
                                    	<i class="ti-bar-chart-alt"></i>
                                	</div>
                            	</div>
                            	<div class="media-body">
                                	<h5><%=pageBody.title_2%></h5>
                                	<%=pageBody.description_2%>
                            	</div>
                        	</div>
                        	<div class="media">
                            	<div class="media-left">
                                	<div class="icon icon-info">
                                    	<i class="ti-dashboard"></i>
                                	</div>
                            	</div>
                            	<div class="media-body">
                                	<h5><%=pageBody.title_3%></h5>
                                	<%=pageBody.description_3%>
                            	</div>
                        	</div>
                    	</div>                      
                    	<div class="col-md-4">
                        	<form method="post" action="">
                                <% if (errors) {%>
                                    <%errors.forEach(function(error) {%>
	                                <div class="alert alert-danger alert-with-icon fade in" data-notify="container">
			                    <button type="button" aria-hidden="true" class="close" data-dismiss="alert">&times;</button>
					    <span data-notify="icon" class="ti-bell"></span>
                                            <span data-notify="message"><%=error.msg%></span>
                                        </div>
                                    <%});%>  
                                <%}%>
                                <% if (flashError) {%>
                                  	    <div class="alert alert-danger alert-with-icon fade in" data-notify="container">
			                    <button type="button" aria-hidden="true" class="close" data-dismiss="alert">&times;</button>
					    <span data-notify="icon" class="ti-bell"></span>
                                            <span data-notify="message"><%=flashError%></span>
                                        </div>  
                                <%}%>
                            	<div class="card card-plain">
                                	<div class="content">
                                        <%for (var i=0; i<placeHolders.length; i++) {%>
                                    	   <div class="form-group">
                                        	   <input type="<%=placeHolders[i].type%>" name="<%=placeHolders[i].name%>" placeholder="<%=placeHolders[i].text%>" class="form-control">
                                    	   </div>
                                    	 <%}%>
                                	</div>
                                	<div class="footer text-center">
                                    	<button type="submit" class="btn btn-fill btn-danger btn-wd"><%=submitButton%></button>
                                	</div>
                            	</div>
                        	</form>
                    	</div>
                	</div>
            	</div>
        	</div>
    		<% include ./partials/footer %>
		</div>
	</div>
</body>

	<% include ./partials/scripts %>

</html>
